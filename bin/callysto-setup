#!/bin/bash

echo "This will install additional packages into your account needed by the notebooks in this repo."
read -r -p "Are you sure you want to go ahead? [y/N] " response
response=${response,,}    # tolower
if [[ "$response" =~ ^(yes|y)$ ]]
then
  # Intall packages used by the notebooks
  pip install textblob --user
  pip install rdflib --user
  pip install plotly --user
  pip install colorlover --user
  pip install qgrid --user
  python -m nltk.downloader punkt brown
  jupyter nbextension enable --py --user qgrid

  echo "export PATH=\$PATH:\$HOME/.local/bin" >>$HOME/.bashrc
fi
